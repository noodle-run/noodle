    "@total-typescript/ts-reset": "^0.5.1",
    "@types/bun": "^1.1.3",
    "@types/eslint": "^8.56.10",
    "@types/eslint-config-prettier": "^6.11.3",
    "@types/node": "^20.14.2",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "commitizen": "^4.3.0",
    "cspell": "^8.8.4",
